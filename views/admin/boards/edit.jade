extends ../layout

block content
	.col-sm-5
	.col-sm-1
		form(action="/admin/boards/update/#{board._id}?redirect_url=#{redirect_url}", method="post")
			.form-group
				span name
				input.form-control(type="text", name="name", placeholder="이름", value="#{board.name}")
			.form-group
				span type
				select.form-control(name="type")
					each type in board_types
						option(value="#{type}", selected=(type === board.type))= type
			.form-group
				span unique_name 
				select.form-control(name="unique_name")
					each name in board_names 
						option(value="#{name}", selected=(name === board.unique_name))= name 

			.form-group
				span major
				input.form-control(type="checkbox", name="major", value="true", checked=board.major)

			button.btn.btn-default.btn-block(type="submit", href="#{redirect_url}") Update

