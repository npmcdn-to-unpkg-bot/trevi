extends ../layout

block script
	link(rel ="stylesheet", href="/stylesheets/articles/index.css")

block header
	include ../main_nav

block content
	#content
		.head-banner
			label 
				input.form-control(type="checkbox", name="mycheck")
				span hello

		.articles-container
			.menu-box

				a.btn.btn-default(type="button", href="/articles/new?redirect_url=#{jadeHelper.encodeURI(url)}&") 새글쓰기

		table.table
			if (articles)
				each article in articles
					tr
						td
							a(href="/articles/#{article._id}")= article.title
							
